<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OutDated</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("OutDated", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Profile", "Index", "Home")</li>
                    <li>@Html.ActionLink("Edit", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <!--<div class="container body-content">
        <div class="row">
            <div class="col-md-12 jumbotron">
                <p class="lead">Welcome to OutDated, the fastest way back in the game.</p>
                <div class="col-sm-2 col-md-6 hero-feature margin-top-5"><a href="~/Account/Register" class="btn btn-primary btn-lg btn-block"><span class="glyphicon glyphicon-pencil"></span> Register</a></div>
                <div class="col-sm-2 col-md-6 hero-feature margin-top-5"><a href="~/Account/Login" class="btn btn-success btn-lg btn-block"><span class="glyphicon glyphicon-log-in"></span> Log in</a></div>
                <img src="~/Content/Images/hp-header.png" class="img-responsive center-block"/>
            </div>
        </div>-->
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - OutDated</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
