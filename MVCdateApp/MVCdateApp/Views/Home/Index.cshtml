@using MVCdateApp.Models
@model IEnumerable<MVCdateApp.Models.UserModel>
@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/minIndexJumbotron.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12 jumbotron">
        <div class="text-left">
            <h2>Welcome to</h2>
            <h1>OutDated</h1>
            <div class="col-md-2">
                <a href="~/Account/Register" class="btn btn-primary btn-sm btn-block"><span class="glyphicon glyphicon-pencil"></span> Register</a>
            </div>
            <div class="col-md-2">
                <a href="~/Account/Login" class="btn btn-primary btn-sm btn-block"><span class="glyphicon glyphicon-log-in"></span> Log in</a>
            </div>
        </div>
    </div>
</div>

<div class="row">

    @foreach (UserModel user in Model)
    {
        <div class="col-md-3 col-sm-6 hero-feature">
            <div class="thumbnail">
                <a href="~/Account/Register">
                    <img src="~/Content/Images/@user.Image" max-height="190" class="img-rounded" alt="Bild">
                </a>
                <div class="caption">
                    <h3>@user.FirstName @user.LastName </h3>
                    @Html.ActionLink("Date me?", "Register", "Account", null, new { @class = "btn btn-info" })
                </div>
            </div>
        </div>
    }
